{
  "name": "product-service",
  "version": "0.1.0",
  "bin": {
    "product-service": "bin/product-service.js"
  },
  "scripts": {
    "build": "npm run build:lambda",
    "build:lambda": "esbuild lambda/getProductsList.ts --bundle --platform=node --external:aws-sdk --outfile=dist/getProductsList.js && esbuild lambda/getProductById.ts --bundle --platform=node --external:aws-sdk --outfile=dist/getProductById.js",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "cdk:deploy": "npm run build && cdk deploy"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.138",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/uuid": "^10.0.0",
    "aws-cdk": "2.145.0",
    "esbuild": "^0.21.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  },
  "dependencies": {
    "@aws-cdk/aws-lambda-nodejs": "^1.204.0",
    "aws-cdk-lib": "^2.145.0",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1646.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  }
}
